extends ../dashboard

block field

    fieldset
        legend Usuarios
        each people in data
                fieldset
                    p= nombre =people.nombres
                    p= people.email
                    .form-group
                        .col-md-4
                            a(href='/dashboard/user/'+people.usuario_id): button#Editar.btn.btn-primary(type='button') Editar
                            a(href='/dashboard/user/action/create'): button#Crear.btn.btn-primary(type='button') Crear
                            if(people.estado == 1)
                                a(href='/dashboard/user/action/delete/'+people.usuario_id): button#Crear.btn.btn-primary(type='button') Suspender
                            else
                                a(href='/dashboard/user/action/activate/'+people.usuario_id): button#Crear.btn.btn-primary(type='button') Activar


