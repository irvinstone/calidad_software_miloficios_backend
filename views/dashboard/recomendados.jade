extends ../dashboard

block field

    fieldset
        legend Recomendados
        div.list-group
            each people in data
                fieldset.border.border-secondary.list-group-item
                    p= nombre =people.telefono
                    p= nombre =people.nombres +" "+ people.apellidos
                    p= people.oficio.nombre
                    .form-group
                        .col-md-4
                            a(href='/dashboard/recomendado/'+people.telefono): button#Editar.btn.btn-primary(type='button') Editar
                            if(people.estado == 1)
                                a(href='/dashboard/recomendado/action/delete/' + people.telefono): button#Crear.btn.btn-primary(type='button') Suspender
                            else
                                a(href='/dashboard/recomendado/action/activate/' + people.telefono): button#Crear.btn.btn-primary(type='button') Activar


