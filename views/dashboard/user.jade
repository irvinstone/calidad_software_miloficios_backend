extends ../dashboard

block field

    form.form-horizontal(method='POST',action='/dashboard/user/update/'+data.usuario_id)
        fieldset
            // Form Name
            legend Usuario
            // Text input
            .form-group
                label.col-md-4.control-label(for='email') email
                .col-md-4
                    input#email.form-control.input-md(value=data.email name='email', type='email', placeholder='email', required='')
            // Text input
            .form-group
                label.col-md-4.control-label(for='nombres') nombres
                .col-md-4
                    input#nombres.form-control.input-md(value=data.nombres name='nombres', type='nombres', placeholder='nombres', required='')
            // Text input
            .form-group
                label.col-md-4.control-label(for='apellidos') apellidos
                .col-md-4
                    input#apellidos.form-control.input-md(value=data.apellidos name='apellidos', type='apellidos', placeholder='apellidos', required='')
            // Text input
            .form-group
                label.col-md-4.control-label(for='edad') edad
                .col-md-4
                    input#edad.form-control.input-md(value=data.edad name='edad', type='edad', placeholder='edad', required='')
            // Password input
            .form-group
                label.col-md-4.control-label(for='telefono') telefono
                .col-md-4
                    input#telefono.form-control.input-md(value=data.telefono name='telefono', type='telefono', placeholder='telefono', required='')
            // Button
            .form-group
                .col-md-4
                    button#Guardar.btn.btn-primary(type='submit') Guardar
                .col-md-4
                    a(href='/dashboard/users'): button#Editar.btn.btn-primary(type='button') Cancelar
            .form-group
                .col-md-4
                    p= err

    form.form-horizontal(method='POST', action='/dashboard/user/profile/' + data.telefono)
        fieldset
            // Form Name
            legend Perfil
            .form-group
                label.col-md-4.control-label(for='perfil')
                .col-md-4
                    select#perfil(name="perfil_id")
                        - perfiles = [ {name:"Admin",value:1}, {name:"Usuario",value:2}]
                        each item in perfiles
                            option(value=item.value selected=data.usuario_perfil.perfil_id == item.value) #{item.name}

            // Button
            .form-group
                .col-md-4
                    button#Cambiar.btn.btn-primary(type='submit') Cambiar
            .form-group
                .col-md-4
                    p= err




